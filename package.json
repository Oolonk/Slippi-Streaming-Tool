{
  "name": "SlippiStreamTool",
  "version": "1.0.0",
  "description": "Slippi relay for Stream",
  "license": "MIT",
  "author": "Oolonk",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "files": [
    "**/*",
    "script/*"
  ],
  "build": {
    "appId": "de.oolonk.slippi.stream",
    "productName": "Slippi Stream Tool",
    "target": "NSIS",
    "icon": "script/icon.ico",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "extraFiles": [
      "overlay",
      "assets"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "15.3.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@slippi/slippi-js": "^6.1.1",
    "@vinceau/slp-realtime": "^3.1.1",
    "auto-launch": "^5.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "find-process": "^1.4.4",
    "fs": "^0.0.1-security",
    "object-watcher": "^1.0.2",
    "rxjs": "^7.4.0",
    "ws": "^7.5.3"
  },
  "private": true,
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "SlippiStreamTool",
        "icon": "script/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "SlippiStreamTool",
            "title": "Slippi Stream Tool",
            "author": "Jonas Hartmer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
