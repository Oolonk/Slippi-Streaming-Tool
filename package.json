{
	"name": "SlippiStreamTool",
	"version": "1.0.0",
	"description": "Slippi relay for Stream",
	"license": "MIT",
	"author": "Oolonk",
	"main": "index.js",
	"scripts": {
		"start": "electron .",
		"pack": "build --dir",
		"dist": "electron-builder"
	},
	"files": [
		"**/*",
		"script/*"
	],
	"build": {
		"appId": "de.oolonk.slippi.stream",
		"productName": "Slippi Stream Tool",
		"target": "NSIS",
		"icon": "script/icon.ico",
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false
		},
		"extraFiles": [
			"overlay",
			"assets"
		]
	},
	"devDependencies": {
		"electron": "^15.3.0",
		"electron-builder": "^22.13.1"
	},
	"dependencies": {
		"@electron/remote": "^2.0.1",
		"@slippi/slippi-js": "^6.1.1",
		"@vinceau/slp-realtime": "^3.1.1",
		"auto-launch": "^5.0.5",
		"electron-packager": "^15.2.0",
		"fs": "^0.0.1-security",
		"object-watcher": "^1.0.2",
		"find-process": "^1.4.4",
		"ws": "^7.5.3",
		"rxjs": "^7.4.0"
	},
	"private": true
}
